<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity"
    tools:context=".MainActivity">
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Activity"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#DD3535"
        android:textStyle="bold"
        />
    <LinearLayout

        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <EditText
            android:textColor="#FAE31E"
            android:textSize="25dp"
            android:gravity="center"
            android:id="@+id/giaTri_1"
            android:paddingStart="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/textview_main"
            android:textColorHint="#F4F222"
            android:layout_width="match_parent"
            android:hint="Nhập giá trị 1"
            android:layout_height="50dp"
            android:paddingLeft="20dp" />
        <EditText
            android:textSize="25dp"
            android:textColor="#FAE31E"
            android:gravity="center"
            android:id="@+id/giaTri_2"
            android:paddingStart="20dp"
            android:background="@drawable/textview_main"
            android:textColorHint="#F4F222"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Nhập giá trị 2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp" />
        <Button
            android:id="@+id/button_tong"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/boder_button_main"
            android:text="Tính tổng"
            />
    </LinearLayout>

</LinearLayout>